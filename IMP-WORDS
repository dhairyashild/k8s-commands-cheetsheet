RULES---
1-- left ALL WORDS -- 1st word small=api  --  then connected new word start CAPITAL=Version
2--  right side its values are follow same patter except few word like below have 1st word alsoin capital like R 1st word is capital in RollingUpdate
      exception----   RollingUpdate ,   IfNotPresent             
                   type: RollingUpdate 
                   imagePullPolicy: IfNotPresent

3---  all kind 1st letter CAPITAL eg. Deployment
4-- mstly other all is small letters like labels ...
apiVersion:                                      aV
kind: Deployment                                 D                    
metadata:
  name: production-app
  labels:                                         s
    app: production-app
    environment: prod
    strategy: rollingupdate
spec:
  replicas: 3
  strategy:
    type: RollingUpdate                          R
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 1
  selector:
    matchLabels:
      app: production-app
  template:
    metadata:
      labels:
        app: production-app
        environment: prod
    spec:
      serviceAccountName: prod-service-account
      securityContext:
        runAsUser: 1000
        runAsGroup: 3000
        fsGroup: 2000
      nodeSelector:
        node-type: high-performance
      affinity:
        podAntiAffinity:                                    pAA
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: app
                operator: In
                values: [production-app]
            topologyKey: "kubernetes.io/hostname"
      containers:
      - name: app-container
        image: my-registry/production-app:v1.2.3
        imagePullPolicy: IfNotPresent                     I N P
        command: ["my-command"] 
        args: ["arg1", "arg2"]                            s
        ports:
        - containerPort: 8080
          protocol: TCP
        env:
        - name: ENVIRONMENT
          value: "production"
        - name: CONFIG_FILE
          value: "/etc/app/config.prod"
        envFrom:
        - secretRef:
            name: app-secrets
        resources:
          requests:
            memory: "512Mi"
            cpu: "500m"
          limits:
            memory: "1Gi"
            cpu: "1"
        securityContext:
          allowPrivilegeEscalation: false
          readOnlyRootFilesystem: true
          capabilities:
            drop: ["ALL"]
        livenessProbe:
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /ready
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 5
